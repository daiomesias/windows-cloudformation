options {
    allow-recursion {
            any;
    };
            listen-on-v6 { none; };
    version "none";
    directory "/var";
    auth-nxdomain no;
    pid-file "/var/run/named/named.pid";
    allow-transfer { 127.0.0.1; };
    allow-query    { 127.0.0.1; };
};


key "rndc-key" {
    algorithm hmac-md5;
    secret "ZjZmYTJlYjVkYzJlMDAxYjc5YmYwYQ==";
};

controls {
#        inet 127.0.0.1 port 953
#        allow { 54.185.125.122; 127.0.0.1; } keys { "rndc-key"; };
   inet * port 953 allow { 127.0.0.1;} keys { "rndc-key"; };
};

zone "." {
    type hint;
    file "named.root";
};

zone "0.0.127.IN-ADDR.ARPA" {
    type master;
    file "localhost.rev";
};
